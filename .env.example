# GameLink 环境配置示例
# 复制此文件为 .env 并修改相应的值

# 应用配置
APP_ENV=development                # 环境类型: development, production
APP_VERSION=2.1.0                 # 应用版本
DEBUG=true                         # 调试模式

# 数据库配置
DB_HOST=localhost                  # 数据库主机
DB_PORT=3306                       # 数据库端口
DB_NAME=gamelink_dev              # 数据库名称
DB_USER=gamelink                   # 数据库用户名
DB_PASSWORD=dev_password_123       # 数据库密码
DB_ROOT_PASSWORD=root_password_123 # 数据库root密码

# Redis 配置
REDIS_HOST=localhost               # Redis 主机
REDIS_PORT=6379                    # Redis 端口
REDIS_PASSWORD=                    # Redis 密码 (可选)
REDIS_DATABASE=0                   # Redis 数据库编号

# JWT 配置
JWT_SECRET=change_me_please_update_this_key_at_least_32_characters  # JWT 密钥 (请修改!)
JWT_EXPIRE_HOURS=24               # JWT 过期时间(小时)
JWT_REFRESH_EXPIRE_HOURS=168      # JWT 刷新令牌过期时间(小时)

# 服务端口
API_PORT=8080                      # 后端API端口
WEB_PORT=5173                      # 前端应用端口

# 文件上传配置
UPLOAD_MAX_SIZE=10485760          # 最大文件大小(字节) - 10MB
UPLOAD_PATH=./uploads             # 文件上传路径
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx  # 允许的文件类型

# 日志配置
LOG_LEVEL=debug                   # 日志级别: debug, info, warn, error
LOG_FILE=./logs/app.log           # 日志文件路径
LOG_MAX_SIZE=100                  # 日志文件最大大小(MB)
LOG_MAX_BACKUPS=3                 # 保留的日志文件数量

# 邮件配置 (可选)
SMTP_HOST=smtp.gmail.com          # SMTP 服务器
SMTP_PORT=587                     # SMTP 端口
SMTP_SECURE=true                  # 是否使用TLS
SMTP_USER=your-email@gmail.com    # 邮箱地址
SMTP_PASSWORD=your-app-password   # 邮箱密码或应用专用密码
SMTP_FROM=noreply@gamelink.com    # 发件人地址

# 短信服务配置 (可选)
SMS_PROVIDER=aliyun               # 短信服务商: aliyun, tencent
SMS_ACCESS_KEY=your_access_key    # 访问密钥
SMS_SECRET_KEY=your_secret_key    # 密钥
SMS_SIGN_NAME=GameLink            # 短信签名

# 对象存储配置 (可选)
OSS_ENDPOINT=https://oss-cn-hangzhou.aliyuncs.com  # OSS 访问域名
OSS_ACCESS_KEY=your_oss_access_key                # OSS 访问密钥
OSS_SECRET_KEY=your_oss_secret_key                # OSS 密钥
OSS_BUCKET=gamelink-bucket                         # OSS 存储桶名称
OSS_REGION=oss-cn-hangzhou                         # OSS 区域

# 第三方登录配置 (可选)
# 微信登录
WECHAT_APP_ID=your_wechat_app_id
WECHAT_APP_SECRET=your_wechat_app_secret

# QQ 登录
QQ_APP_ID=your_qq_app_id
QQ_APP_KEY=your_qq_app_key

# GitHub 登录
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# 支付配置 (可选)
# 支付宝
ALIPAY_APP_ID=your_alipay_app_id
ALIPAY_PRIVATE_KEY=your_alipay_private_key
ALIPAY_PUBLIC_KEY=your_alipay_public_key

# 微信支付
WECHAT_PAY_MCH_ID=your_merchant_id
WECHAT_PAY_KEY=your_wechat_pay_key
WECHAT_PAY_CERT_PATH=./certs/wechat_pay_cert.pem

# 监控配置 (可选)
PROMETHEUS_ENABLED=false         # 是否启用 Prometheus 指标
PROMETHEUS_PORT=9090             # Prometheus 端口

# 缓存配置
CACHE_TTL=3600                   # 缓存过期时间(秒)
CACHE_PREFIX=gamelink:           # 缓存键前缀

# 安全配置
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173  # 允许的跨域源
RATE_LIMIT_REQUESTS=100         # 速率限制请求数
RATE_LIMIT_WINDOW=60            # 速率限制时间窗口(秒)

# WebSocket 配置
WS_READ_BUFFER_SIZE=1024        # WebSocket 读缓冲区大小
WS_WRITE_BUFFER_SIZE=1024       # WebSocket 写缓冲区大小
WS_PING_PERIOD=54               # WebSocket ping间隔(秒)
WS_PONG_WAIT=5                  # WebSocket pong等待时间(秒)

# 数据库连接池配置
DB_MAX_OPEN_CONNS=25            # 最大打开连接数
DB_MAX_IDLE_CONNS=10            # 最大空闲连接数
DB_CONN_MAX_LIFETIME=3600       # 连接最大存活时间(秒)

# 业务配置
DEFAULT_PAGE_SIZE=20            # 默认分页大小
MAX_PAGE_SIZE=100               # 最大分页大小
ORDER_TIMEOUT_MINUTES=30        # 订单超时时间(分钟)
PAYMENT_TIMEOUT_MINUTES=15      # 支付超时时间(分钟)

# 地图服务配置 (可选)
AMAP_API_KEY=your_amap_api_key  # 高德地图API密钥
AMAP_WEB_API_KEY=your_amap_web_api_key  # 高德地图Web API密钥