{
  "openapi": "3.0.0",
  "info": {
    "title": "GameLink Admin API",
    "version": "0.3.0",
    "description": "GameLink 管理端与健康检查的基础接口描述。"
  },
  "paths": {
    "/healthz": {
      "get": {
        "summary": "健康检查",
        "description": "返回服务可用状态。",
        "responses": {
          "200": {
            "description": "服务可用",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string", "example": "ok" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/healthz": {
      "get": {
        "summary": "健康检查 (版本化)",
        "responses": { "$ref": "#/paths/~1healthz/get/responses" }
      }
    },
    "/api/v1/admin/games": {
      "get": {
        "summary": "列出游戏",
        "security": [ { "bearerAuth": [] } ],
        "parameters": [
          { "in": "query", "name": "page", "schema": {"type": "integer", "default": 1}},
          { "in": "query", "name": "page_size", "schema": {"type": "integer", "default": 20}}
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/APIResponseGameList" } }
            }
          }
        }
      }
    },
    "/api/v1/admin/users": {
      "get": {
        "summary": "列出用户",
        "security": [ { "bearerAuth": [] } ],
        "parameters": [
          { "in": "query", "name": "page", "schema": {"type": "integer", "default": 1}},
          { "in": "query", "name": "page_size", "schema": {"type": "integer", "default": 20}}
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/APIResponseUserList" } }
            }
          }
        }
      }
    },
    "/api/v1/admin/players": {
      "get": {
        "summary": "列出陪玩",
        "security": [ { "bearerAuth": [] } ],
        "parameters": [
          { "in": "query", "name": "page", "schema": {"type": "integer", "default": 1}},
          { "in": "query", "name": "page_size", "schema": {"type": "integer", "default": 20}}
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/APIResponsePlayerList" } }
            }
          }
        }
      }
    },
    "/api/v1/auth/login": {
      "post": {
        "summary": "登录获取 JWT",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/LoginRequest" } }
          }
        },
        "responses": {
          "200": {
            "description": "登录成功",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/APIResponseLoginResponse" } }
            }
          },
          "401": {
            "description": "认证失败",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/APIResponseEmpty" } }
            }
          }
        }
      }
    },
    "/api/v1/auth/refresh": {
      "post": {
        "summary": "刷新 JWT",
        "security": [ { "bearerAuth": [] } ],
        "parameters": [
          { "in": "header", "name": "Authorization", "required": true, "schema": {"type":"string"}, "description": "Bearer <token>" }
        ],
        "responses": {
          "200": {
            "description": "刷新成功",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/APIResponseToken" } }
            }
          },
          "401": {
            "description": "认证失败",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/APIResponseEmpty" } }
            }
          }
        }
      }
    },
    "/api/v1/auth/logout": {
      "post": {
        "summary": "退出（前端丢弃 Token）",
        "security": [ { "bearerAuth": [] } ],
        "responses": {
          "200": {
            "description": "已登出",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/APIResponseEmpty" } }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Pagination": {
        "type": "object",
        "properties": {
          "page": {"type": "integer"},
          "page_size": {"type": "integer"},
          "total": {"type": "integer"},
          "total_pages": {"type": "integer"},
          "has_next": {"type": "boolean"},
          "has_prev": {"type": "boolean"}
        }
      },
      "Game": {
        "type": "object",
        "properties": {
          "id": {"type": "integer"},
          "key": {"type": "string"},
          "name": {"type": "string"},
          "category": {"type": "string"},
          "icon_url": {"type": "string"},
          "description": {"type": "string"}
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {"type": "integer"},
          "phone": {"type": "string"},
          "email": {"type": "string"},
          "name": {"type": "string"},
          "avatar_url": {"type": "string"},
          "role": {"type": "string"},
          "status": {"type": "string"}
        }
      },
      "Player": {
        "type": "object",
        "properties": {
          "id": {"type": "integer"},
          "user_id": {"type": "integer"},
          "nickname": {"type": "string"},
          "bio": {"type": "string"},
          "rating_average": {"type": "number"},
          "rating_count": {"type": "integer"},
          "hourly_rate_cents": {"type": "integer"},
          "main_game_id": {"type": "integer"},
          "verification_status": {"type": "string"}
        }
      },
      "APIResponseGameList": {
        "type": "object",
        "properties": {
          "success": {"type": "boolean"},
          "code": {"type": "integer"},
          "message": {"type": "string"},
          "data": {"type": "array", "items": {"$ref": "#/components/schemas/Game"}},
          "pagination": {"$ref": "#/components/schemas/Pagination"}
        }
      },
      "APIResponseUserList": {
        "type": "object",
        "properties": {
          "success": {"type": "boolean"},
          "code": {"type": "integer"},
          "message": {"type": "string"},
          "data": {"type": "array", "items": {"$ref": "#/components/schemas/User"}},
          "pagination": {"$ref": "#/components/schemas/Pagination"}
        }
      },
      "APIResponsePlayerList": {
        "type": "object",
        "properties": {
          "success": {"type": "boolean"},
          "code": {"type": "integer"},
          "message": {"type": "string"},
          "data": {"type": "array", "items": {"$ref": "#/components/schemas/Player"}},
          "pagination": {"$ref": "#/components/schemas/Pagination"}
        }
      },
      "LoginRequest": {
        "type": "object",
        "required": ["username", "password"],
        "properties": {
          "username": {"type": "string"},
          "password": {"type": "string", "format": "password"}
        }
      },
      "LoginResponse": {
        "type": "object",
        "properties": {
          "token": {"type": "string"},
          "expires_at": {"type": "string", "format": "date-time"},
          "user": {"$ref": "#/components/schemas/User"}
        }
      },
      "TokenPayload": {
        "type": "object",
        "properties": {
          "token": {"type": "string"}
        }
      },
      "APIResponseLoginResponse": {
        "type": "object",
        "properties": {
          "success": {"type": "boolean"},
          "code": {"type": "integer"},
          "message": {"type": "string"},
          "data": {"$ref": "#/components/schemas/LoginResponse"}
        }
      },
      "APIResponseToken": {
        "type": "object",
        "properties": {
          "success": {"type": "boolean"},
          "code": {"type": "integer"},
          "message": {"type": "string"},
          "data": {"$ref": "#/components/schemas/TokenPayload"}
        }
      },
      "APIResponseEmpty": {
        "type": "object",
        "properties": {
          "success": {"type": "boolean"},
          "code": {"type": "integer"},
          "message": {"type": "string"}
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
