basePath: /api/v1
definitions:
  gamelink_internal_model.Role:
    enum:
    - user
    - player
    - admin
    type: string
    x-enum-varnames:
    - RoleUser
    - RolePlayer
    - RoleAdmin
  gamelink_internal_model.User:
    properties:
      avatar_url:
        type: string
      created_at:
        type: string
      email:
        type: string
      id:
        type: integer
      last_login_at:
        type: string
      name:
        type: string
      phone:
        type: string
      role:
        $ref: '#/definitions/gamelink_internal_model.Role'
      status:
        $ref: '#/definitions/gamelink_internal_model.UserStatus'
      updated_at:
        type: string
    type: object
  gamelink_internal_model.UserStatus:
    enum:
    - active
    - suspended
    - banned
    type: string
    x-enum-varnames:
    - UserStatusActive
    - UserStatusSuspended
    - UserStatusBanned
  internal_admin.AssignOrderPayload:
    properties:
      player_id:
        type: integer
    required:
    - player_id
    type: object
  internal_admin.CancelOrderPayload:
    properties:
      reason:
        type: string
    type: object
  internal_admin.CapturePaymentPayload:
    properties:
      paid_at:
        example: "2025-10-28T10:00:00Z"
        type: string
      provider_raw:
        example: '{"result":"captured"}'
        type: string
      provider_trade_no:
        type: string
    type: object
  internal_admin.CreateOrderPayload:
    properties:
      currency:
        type: string
      description:
        type: string
      game_id:
        type: integer
      player_id:
        type: integer
      price_cents:
        type: integer
      scheduled_end:
        type: string
      scheduled_start:
        type: string
      title:
        type: string
      user_id:
        type: integer
    required:
    - currency
    - game_id
    - price_cents
    - user_id
    type: object
  internal_admin.CreatePaymentPayload:
    properties:
      amount_cents:
        type: integer
      currency:
        type: string
      method:
        type: string
      order_id:
        type: integer
      provider_raw:
        example: '{"result":"success"}'
        type: string
      user_id:
        type: integer
    required:
    - amount_cents
    - currency
    - method
    - order_id
    - user_id
    type: object
  internal_admin.CreatePlayerPayload:
    properties:
      bio:
        type: string
      hourly_rate_cents:
        type: integer
      main_game_id:
        type: integer
      nickname:
        type: string
      rank:
        type: string
      user_id:
        type: integer
      verification_status:
        type: string
    required:
    - user_id
    - verification_status
    type: object
  internal_admin.CreateReviewPayload:
    properties:
      content:
        type: string
      order_id:
        type: integer
      player_id:
        type: integer
      score:
        type: integer
      user_id:
        type: integer
    required:
    - order_id
    - player_id
    - score
    - user_id
    type: object
  internal_admin.CreateUserPayload:
    properties:
      avatar_url:
        type: string
      email:
        type: string
      name:
        type: string
      password:
        minLength: 6
        type: string
      phone:
        type: string
      role:
        type: string
      status:
        type: string
    required:
    - name
    - password
    - role
    - status
    type: object
  internal_admin.GamePayload:
    properties:
      category:
        type: string
      description:
        type: string
      icon_url:
        type: string
      key:
        type: string
      name:
        type: string
    required:
    - key
    - name
    type: object
  internal_admin.RefundPaymentPayload:
    properties:
      provider_raw:
        example: '{"result":"refunded"}'
        type: string
      provider_trade_no:
        type: string
      refunded_at:
        example: "2025-10-28T12:00:00Z"
        type: string
    type: object
  internal_admin.ReviewOrderPayload:
    properties:
      approved:
        type: boolean
      reason:
        type: string
    type: object
  internal_admin.SkillTagsBody:
    properties:
      tags:
        items:
          type: string
        type: array
    required:
    - tags
    type: object
  internal_admin.UpdateOrderPayload:
    properties:
      cancel_reason:
        type: string
      currency:
        type: string
      price_cents:
        type: integer
      scheduled_end:
        type: string
      scheduled_start:
        type: string
      status:
        type: string
    required:
    - currency
    - price_cents
    - status
    type: object
  internal_admin.UpdatePaymentPayload:
    properties:
      paid_at:
        example: "2025-10-28T10:00:00Z"
        type: string
      provider_raw:
        example: '{"result":"update"}'
        type: string
      provider_trade_no:
        type: string
      refunded_at:
        example: "2025-10-28T12:00:00Z"
        type: string
      status:
        type: string
    required:
    - status
    type: object
  internal_admin.UpdatePlayerPayload:
    properties:
      bio:
        type: string
      hourly_rate_cents:
        type: integer
      main_game_id:
        type: integer
      nickname:
        type: string
      rank:
        type: string
      verification_status:
        type: string
    required:
    - verification_status
    type: object
  internal_admin.UpdateReviewPayload:
    properties:
      content:
        type: string
      score:
        type: integer
    required:
    - score
    type: object
  internal_admin.UpdateUserPayload:
    properties:
      avatar_url:
        type: string
      email:
        type: string
      name:
        type: string
      password:
        type: string
      phone:
        type: string
      role:
        type: string
      status:
        type: string
    required:
    - name
    - role
    - status
    type: object
  internal_admin.orderNotePayload:
    properties:
      note:
        type: string
    type: object
  internal_admin.orderRefundPayload:
    properties:
      amount_cents:
        type: integer
      note:
        type: string
      reason:
        type: string
    required:
    - reason
    type: object
  internal_handler.loginRequest:
    properties:
      password:
        type: string
      username:
        type: string
    required:
    - password
    - username
    type: object
  internal_handler.loginResponse:
    properties:
      expires_at:
        type: string
      token:
        type: string
      user:
        $ref: '#/definitions/gamelink_internal_model.User'
    type: object
  internal_handler.registerRequest:
    properties:
      email:
        type: string
      name:
        type: string
      password:
        minLength: 6
        type: string
      phone:
        type: string
    required:
    - name
    - password
    type: object
  internal_handler.tokenPayload:
    properties:
      token:
        type: string
    type: object
info:
  contact: {}
  description: GameLink 平台 API，包含健康检查、认证与管理端能力。
  title: GameLink API
  version: 0.3.0
paths:
  /admin/games:
    get:
      parameters:
      - description: 页码
        in: query
        name: page
        type: integer
      - description: 每页数量
        in: query
        name: page_size
        type: integer
      produces:
      - application/json
      responses:
        "200":
          description: OK
          schema:
            additionalProperties: true
            type: object
      security:
      - BearerAuth: []
      summary: 列出游戏
      tags:
      - Admin/Games
    post:
      consumes:
      - application/json
      parameters:
      - description: 游戏信息
        in: body
        name: request
        required: true
        schema:
          $ref: '#/definitions/internal_admin.GamePayload'
      produces:
      - application/json
      responses:
        "201":
          description: Created
          schema:
            additionalProperties: true
            type: object
        "400":
          description: Bad Request
          schema:
            additionalProperties: true
            type: object
      security:
      - BearerAuth: []
      summary: 创建游戏
      tags:
      - Admin/Games
  /admin/games/{id}:
    delete:
      parameters:
      - description: 游戏ID
        in: path
        name: id
        required: true
        type: integer
      produces:
      - application/json
      responses:
        "200":
          description: OK
          schema:
            additionalProperties: true
            type: object
        "404":
          description: Not Found
          schema:
            additionalProperties: true
            type: object
      security:
      - BearerAuth: []
      summary: 删除游戏
      tags:
      - Admin/Games
    get:
      parameters:
      - description: 游戏ID
        in: path
        name: id
        required: true
        type: integer
      produces:
      - application/json
      responses:
        "200":
          description: OK
          schema:
            additionalProperties: true
            type: object
        "404":
          description: Not Found
          schema:
            additionalProperties: true
            type: object
      security:
      - BearerAuth: []
      summary: 获取游戏
      tags:
      - Admin/Games
    put:
      consumes:
      - application/json
      parameters:
      - description: 游戏ID
        in: path
        name: id
        required: true
        type: integer
      - description: 游戏信息
        in: body
        name: request
        required: true
        schema:
          $ref: '#/definitions/internal_admin.GamePayload'
      produces:
      - application/json
      responses:
        "200":
          description: OK
          schema:
            additionalProperties: true
            type: object
        "404":
          description: Not Found
          schema:
            additionalProperties: true
            type: object
      security:
      - BearerAuth: []
      summary: 更新游戏
      tags:
      - Admin/Games
  /admin/games/{id}/logs:
    get:
      parameters:
      - description: 游戏ID
        in: path
        name: id
        required: true
        type: integer
      - description: 页码
        in: query
        name: page
        type: integer
      - description: 每页数量
        in: query
        name: page_size
        type: integer
      - description: 动作过滤
        enum:
        - create
        - update
        - delete
        in: query
        name: action
        type: string
      - description: 操作者用户ID
        in: query
        name: actor_user_id
        type: integer
      - description: 开始时间
        in: query
        name: date_from
        type: string
      - description: 结束时间
        in: query
        name: date_to
        type: string
      - description: 导出格式
        enum:
        - csv
        in: query
        name: export
        type: string
      - description: 导出列（逗号分隔）
        in: query
        name: fields
        type: string
      - description: 列头语言
        enum:
        - en
        - zh
        in: query
        name: header_lang
        type: string
      produces:
      - application/json
      responses:
        "200":
          description: OK
          schema:
            additionalProperties: true
            type: object
      security:
      - BearerAuth: []
      summary: 获取游戏操作日志
      tags:
      - Admin/Games
  /admin/orders:
    get:
      description: 根据状态/用户/玩家/游戏和时间范围筛选，支持分页
      parameters:
      - description: 页码
        in: query
        name: page
        type: integer
      - description: 每页数量
        in: query
        name: page_size
        type: integer
      - collectionFormat: csv
        description: 订单状态，可多值
        in: query
        items:
          type: string
        name: status
        type: array
      - description: 用户ID
        in: query
        name: user_id
        type: integer
      - description: 玩家ID
        in: query
        name: player_id
        type: integer
      - description: 游戏ID
        in: query
        name: game_id
        type: integer
      - description: 开始时间
        in: query
        name: date_from
        type: string
      - description: 结束时间
        in: query
        name: date_to
        type: string
      produces:
      - application/json
      responses:
        "200":
          description: OK
          schema:
            additionalProperties: true
            type: object
      security:
      - BearerAuth: []
      summary: 列出订单
      tags:
      - Admin/Orders
    post:
      consumes:
      - application/json
      parameters:
      - description: 订单信息
        in: body
        name: request
        required: true
        schema:
          $ref: '#/definitions/internal_admin.CreateOrderPayload'
      produces:
      - application/json
      responses:
        "201":
          description: Created
          schema:
            additionalProperties: true
            type: object
        "400":
          description: Bad Request
          schema:
            additionalProperties: true
            type: object
      security:
      - BearerAuth: []
      summary: 创建订单
      tags:
      - Admin/Orders
  /admin/orders/{id}:
    delete:
      parameters:
      - description: 订单ID
        in: path
        name: id
        required: true
        type: integer
      produces:
      - application/json
      responses:
        "200":
          description: OK
          schema:
            additionalProperties: true
            type: object
        "404":
          description: Not Found
          schema:
            additionalProperties: true
            type: object
      security:
      - BearerAuth: []
      summary: 删除订单
      tags:
      - Admin/Orders
    get:
      parameters:
      - description: 订单ID
        in: path
        name: id
        required: true
        type: integer
      produces:
      - application/json
      responses:
        "200":
          description: OK
          schema:
            additionalProperties: true
            type: object
        "404":
          description: Not Found
          schema:
            additionalProperties: true
            type: object
      security:
      - BearerAuth: []
      summary: 获取订单
      tags:
      - Admin/Orders
    put:
      consumes:
      - application/json
      parameters:
      - description: 订单ID
        in: path
        name: id
        required: true
        type: integer
      - description: 订单信息
        in: body
        name: request
        required: true
        schema:
          $ref: '#/definitions/internal_admin.UpdateOrderPayload'
      produces:
      - application/json
      responses:
        "200":
          description: OK
          schema:
            additionalProperties: true
            type: object
        "404":
          description: Not Found
          schema:
            additionalProperties: true
            type: object
      security:
      - BearerAuth: []
      summary: 更新订单
      tags:
      - Admin/Orders
  /admin/orders/{id}/assign:
    post:
      consumes:
      - application/json
      parameters:
      - description: 订单ID
        in: path
        name: id
        required: true
        type: integer
      - description: 指派信息
        in: body
        name: request
        required: true
        schema:
          $ref: '#/definitions/internal_admin.AssignOrderPayload'
      produces:
      - application/json
      responses:
        "200":
          description: OK
          schema:
            additionalProperties: true
            type: object
        "404":
          description: Not Found
          schema:
            additionalProperties: true
            type: object
      security:
      - BearerAuth: []
      summary: 指派订单的陪玩师
      tags:
      - Admin/Orders
  /admin/orders/{id}/cancel:
    post:
      consumes:
      - application/json
      parameters:
      - description: 订单ID
        in: path
        name: id
        required: true
        type: integer
      - description: 取消原因
        in: body
        name: request
        required: true
        schema:
          $ref: '#/definitions/internal_admin.CancelOrderPayload'
      produces:
      - application/json
      responses:
        "200":
          description: OK
          schema:
            additionalProperties: true
            type: object
        "404":
          description: Not Found
          schema:
            additionalProperties: true
            type: object
      security:
      - BearerAuth: []
      summary: 取消订单
      tags:
      - Admin/Orders
  /admin/orders/{id}/complete:
    post:
      consumes:
      - application/json
      description: 将订单状态从 in_progress 置为 completed，并记录完成时间
      parameters:
      - description: 订单ID
        in: path
        name: id
        required: true
        type: integer
      - description: 备注（可选）
        in: body
        name: request
        schema:
          $ref: '#/definitions/internal_admin.orderNotePayload'
      produces:
      - application/json
      responses:
        "200":
          description: OK
          schema:
            additionalProperties: true
            type: object
        "404":
          description: Not Found
          schema:
            additionalProperties: true
            type: object
      security:
      - BearerAuth: []
      summary: 完成订单
      tags:
      - Admin/Orders
  /admin/orders/{id}/confirm:
    post:
      consumes:
      - application/json
      description: 将订单状态从 pending 置为 confirmed
      parameters:
      - description: 订单ID
        in: path
        name: id
        required: true
        type: integer
      - description: 备注（可选）
        in: body
        name: request
        schema:
          $ref: '#/definitions/internal_admin.orderNotePayload'
      produces:
      - application/json
      responses:
        "200":
          description: OK
          schema:
            additionalProperties: true
            type: object
        "404":
          description: Not Found
          schema:
            additionalProperties: true
            type: object
      security:
      - BearerAuth: []
      summary: 确认订单
      tags:
      - Admin/Orders
  /admin/orders/{id}/logs:
    get:
      parameters:
      - description: 订单ID
        in: path
        name: id
        required: true
        type: integer
      - description: 页码
        in: query
        name: page
        type: integer
      - description: 每页数量
        in: query
        name: page_size
        type: integer
      - description: 动作过滤
        enum:
        - create
        - assign_player
        - update_status
        - cancel
        - delete
        in: query
        name: action
        type: string
      - description: 操作者用户ID
        in: query
        name: actor_user_id
        type: integer
      - description: 开始时间
        in: query
        name: date_from
        type: string
      - description: 结束时间
        in: query
        name: date_to
        type: string
      - description: 导出格式
        enum:
        - csv
        in: query
        name: export
        type: string
      - description: 导出列（逗号分隔），默认：id,entity_type,entity_id,actor_user_id,action,reason,metadata,created_at
        in: query
        name: fields
        type: string
      - description: 列头语言
        enum:
        - en
        - zh
        in: query
        name: header_lang
        type: string
      produces:
      - application/json
      responses:
        "200":
          description: OK
          schema:
            additionalProperties: true
            type: object
      security:
      - BearerAuth: []
      summary: 获取订单操作日志
      tags:
      - Admin/Orders
  /admin/orders/{id}/payments:
    get:
      parameters:
      - description: 订单ID
        in: path
        name: id
        required: true
        type: integer
      produces:
      - application/json
      responses:
        "200":
          description: OK
          schema:
            additionalProperties: true
            type: object
        "404":
          description: Not Found
          schema:
            additionalProperties: true
            type: object
      security:
      - BearerAuth: []
      summary: 获取订单支付记录
      tags:
      - Admin/Orders
  /admin/orders/{id}/refund:
    post:
      consumes:
      - application/json
      description: 将订单状态标记为 refunded，并记录退款金额与原因，同时关联支付退款
      parameters:
      - description: 订单ID
        in: path
        name: id
        required: true
        type: integer
      - description: 退款信息
        in: body
        name: request
        required: true
        schema:
          $ref: '#/definitions/internal_admin.orderRefundPayload'
      produces:
      - application/json
      responses:
        "200":
          description: OK
          schema:
            additionalProperties: true
            type: object
        "404":
          description: Not Found
          schema:
            additionalProperties: true
            type: object
      security:
      - BearerAuth: []
      summary: 订单退款
      tags:
      - Admin/Orders
  /admin/orders/{id}/refunds:
    get:
      parameters:
      - description: 订单ID
        in: path
        name: id
        required: true
        type: integer
      produces:
      - application/json
      responses:
        "200":
          description: OK
          schema:
            additionalProperties: true
            type: object
        "404":
          description: Not Found
          schema:
            additionalProperties: true
            type: object
      security:
      - BearerAuth: []
      summary: 获取订单退款记录
      tags:
      - Admin/Orders
  /admin/orders/{id}/review:
    post:
      consumes:
      - application/json
      parameters:
      - description: 订单ID
        in: path
        name: id
        required: true
        type: integer
      - description: 审核信息
        in: body
        name: request
        required: true
        schema:
          $ref: '#/definitions/internal_admin.ReviewOrderPayload'
      produces:
      - application/json
      responses:
        "200":
          description: OK
          schema:
            additionalProperties: true
            type: object
        "404":
          description: Not Found
          schema:
            additionalProperties: true
            type: object
      security:
      - BearerAuth: []
      summary: 审核订单（通过/拒绝）
      tags:
      - Admin/Orders
  /admin/orders/{id}/reviews:
    get:
      parameters:
      - description: 订单ID
        in: path
        name: id
        required: true
        type: integer
      produces:
      - application/json
      responses:
        "200":
          description: OK
          schema:
            additionalProperties: true
            type: object
        "404":
          description: Not Found
          schema:
            additionalProperties: true
            type: object
      security:
      - BearerAuth: []
      summary: 获取订单评价列表
      tags:
      - Admin/Orders
  /admin/orders/{id}/start:
    post:
      consumes:
      - application/json
      description: 将订单状态从 confirmed 置为 in_progress，并记录开始时间
      parameters:
      - description: 订单ID
        in: path
        name: id
        required: true
        type: integer
      - description: 备注（可选）
        in: body
        name: request
        schema:
          $ref: '#/definitions/internal_admin.orderNotePayload'
      produces:
      - application/json
      responses:
        "200":
          description: OK
          schema:
            additionalProperties: true
            type: object
        "404":
          description: Not Found
          schema:
            additionalProperties: true
            type: object
      security:
      - BearerAuth: []
      summary: 开始服务
      tags:
      - Admin/Orders
  /admin/orders/{id}/timeline:
    get:
      description: 汇总订单的状态变更、操作日志、支付事件等信息
      parameters:
      - description: 订单ID
        in: path
        name: id
        required: true
        type: integer
      produces:
      - application/json
      responses:
        "200":
          description: OK
          schema:
            additionalProperties: true
            type: object
        "404":
          description: Not Found
          schema:
            additionalProperties: true
            type: object
